{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": ["app/*"],
      "@/public/*": ["public/*"],
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/services/*": ["services/*"],
      "@/interfaces/*": ["interfaces/*"],
      "@/utils/*": ["utils/*"],
      "@/locale/*": ["locale/*"],
      "@/schemas/*": ["schemas/*"],
      "@/api/*": ["api/*"],
      "@/Shared/*": ["Shared/*"],
      "@/hooks/*": ["hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "clean:db": "ts-node -r tsconfig-paths/register src/scripts/utilities/cleanDatabase.ts",
    "verify:db": "ts-node -r tsconfig-paths/register src/scripts/utilities/verifyDatabase.ts",
    "verify:enhanced": "ts-node -r tsconfig-paths/register src/scripts/utilities/verifyEnhancedDatabase.ts",
    "verify:links": "ts-node -r tsconfig-paths/register src/scripts/runVerification.ts",
    "verify:links:repair": "ts-node -r tsconfig-paths/register src/scripts/runVerification.ts -- --repair",
    "fix:indexes": "ts-node -r tsconfig-paths/register src/scripts/utilities/fixIndexes.ts",
    "fix:duplicate-emails": "ts-node -r tsconfig-paths/register src/scripts/fixDuplicateEmails.ts",
    "fix:user-stats": "ts-node -r tsconfig-paths/register src/scripts/syncCompanyUserStats.ts",
    "company:limits": "ts-node -r tsconfig-paths/register src/scripts/updateCompanyLimits.ts",
    "test:quick": "ts-node -r tsconfig-paths/register src/scripts/utilities/quickTest.ts",
    "seed:plans": "ts-node -r tsconfig-paths/register src/scripts/initialization/seedPlans.ts",
    "init:enhanced": "ts-node -r tsconfig-paths/register src/scripts/initialization/initializeEnhancedNew.ts",
    "init:settings": "ts-node -r tsconfig-paths/register src/scripts/initialization/initializeSettings.ts",
    "init:run": "ts-node -r tsconfig-paths/register src/scripts/initialization/runEnhancedInitialization.ts",
    "init:clean": "npm run clean:db && npm run init:enhanced",
    "init:fresh": "npm run clean:db && npm run init:enhanced && npm run verify:enhanced"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.4.0",
    "colors": "^1.4.0",
    "cookies-next": "^6.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "resend": "^6.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
